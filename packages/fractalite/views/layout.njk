<!DOCTYPE html>
<html lang="{{ app.meta.lang }}" dir="{{ app.meta.dir }}">
<head>
  <meta charset="{{ app.meta.charset }}">
  <meta name="viewport" content="{{ app.meta.viewport }}">

  {%- block preStyles %}{% endblock %}
  {%- block styles %}
  {% for url in stylesheets -%}
  <link rel="stylesheet" href="{{ url }}">
  {%- endfor %}
  {% endblock -%}
  {% block postStyles %}{% endblock -%}

  <title>{% block title %}{% if page.title %}{{ page.title }} | {% endif %}{{ app.meta.title }}{% endblock %}</title>
</head>
<body>

<div id="app" class="fr-app">
{%- block preBody %}{% endblock %}
{% block body %}{% endblock %}
{%- block postbody %}{% endblock %}
</div>

{%- block preScripts %}{% endblock %}
{%- block scripts %}
{% for url in scripts -%}
<script src="{{ url }}"></script>
{%- endfor %}
{% endblock -%}
{%- block postScripts %}{% endblock -%}

</body>
</html>
